/**index.wxss**/

.sender {
  background-color: white;
  height: 120rpx;
  display: flex;
  padding-left: 10rpx;
}

.sender-img,.recipient-img {
  width: 10%;
  margin-top:20rpx;
  margin-left: 10rpx;
}

.sender-img text{
  color:chocolate;
}

.recipient-img text{
  color: blue;
}

.default-sender-msg, .sender-info {
  display: flex;
  margin-left: 10rpx;
  flex-direction: column;
  justify-items: flex-start;
  width: 70%;
}

.default-sender-msg .info{
 font-size: 16px;
 color: black;
}

.default-sender-msg .address{
  color: gray;
}

.sender-info {
  display: flex;
  margin-left: 10rpx;
  flex-direction: column;
  justify-items: flex-start;
  width: 70%;
}

.sender-address-manager {
  border-left-width: 2rpx;
  border-left-color: red;
  padding-top: 32rpx;
}

.recipient {
  background-color: white;
  height: 120rpx;
  display: flex;
  padding-left: 10rpx;
  margin-top: 20rpx;
  padding-top: 10rpx;
}

.submit{
  position: fixed;
  bottom: 0;
  height: 80rpx;
  margin-left: 10rpx;
}

.term{
  color: #0099ff;
}
.goodsCategory van-button{
  margin: 30rpx;
}

