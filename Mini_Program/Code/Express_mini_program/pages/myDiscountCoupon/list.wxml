<!--pages/myDiscountCoupon/list/list.wxml-->
<view class="container">
    <view class="page-body">
        <view class="swiper-tab">
            <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">未使用(0)</view>
            <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">已使用(0)</view>
            <view class="swiper-tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="clickTab">已过期(0)</view>
        </view>
        
        <swiper current="{{currentTab}}" duration="300" bindchange="swiperTab">
            <swiper-item ><view>未使用的优惠券</view></swiper-item>
            <swiper-item><view>已使用的优惠券</view></swiper-item>
            <swiper-item><view>已过期的优惠券</view></swiper-item>
        </swiper>
    </view>
</view>
